@using KinoAfisha.Models
@model Film


<table class="table align-middle " style="text-align:center">
    <tbody>
        <tr>

            <td>
                <br />
                <h1><u>@Model.NameFilm</u></h1>
            </td>
        </tr>

        <tr>
            <td colspan="2">
                <h3>Аннотация</h3>
            </td>
        </tr>
    </tbody>
</table>

<div class="row">
    <div class="accordion">
        <div class="accordion-item" style="background-color: cornflowerblue;">
            <h2 class="accordion-header" id="one">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse" aria-expanded="false" aria-controls="flush-collapse">
                    Описание фильма
                </button>
            </h2>
            <div id="flush-collapse" class="accordion-collapse collapse" aria-labelledby="one">
                <div class="accordion-body">
                    <span><pre style="width: auto; white-space: pre-wrap;">@Model.FilmDescription</pre></span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="accordion">
        <div class="accordion-item" style="background-color: cornflowerblue;">
            <h2 class="accordion-header" id="two">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse2" aria-expanded="false" aria-controls="flush-collapse2">
                    Актеры
                </button>
            </h2>
            <div id="flush-collapse2" class="accordion-collapse collapse" aria-labelledby="two">
                <div class="accordion-body">
                    <span><pre style="width: auto; white-space: pre-wrap;">@Model.FilmAllActors</pre></span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="accordion">
        <div class="accordion-item" style="background-color: cornflowerblue;">
            <h2 class="accordion-header" id="three">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse3" aria-expanded="false" aria-controls="flush-collapse3">
                    Дополнительно
                </button>
            </h2>
            <div id="flush-collapse3" class="accordion-collapse collapse" aria-labelledby="three">
                <div class="accordion-body">
                    <span><pre style="width: auto; white-space: pre-wrap;">@Model.FilmDop</pre></span>
                </div>
            </div>
        </div>
    </div>
</div>

<br />

@Html.ActionLink("К фильмам", "Index", "Films", null, new { @class = "btn btn-primary" })
<br>
<br>

@Html.ActionLink("На главную", "Index", "Kinos", null, new { @class = "btn btn-primary" })


<hr />


